<div class="bg-panel">

    <div class="d-flex" id="wrapper">

        {{!-- SIDEBAR --}}
        {{>sidebar}}

        {{!-- PAGE CONTENT --}}
        <div id="page-content-wrapper">
            <button class="btn btn-primary" id="sidebarToggle"><i class="fas fa-bars"></i></button>

            <div class="admin-container w-100 container">
                <div class="head-admin-container m-3">
                    <h1 class="title">Menu de Publicaciones</h1>
                    <a href="/admin/publicaciones"><button class="btn btn-primary">Volver Atras</button></a>
                </div>

                <div id="content" class="d-block">
                    <!-- FORMULARIO -->
                    <div class="row">
                        <div class="col-lg mx-auto">
                            <div class="card">
                                <div class="card-header">
                                    <h3>Nueva Publicacion</h3>
                                </div>
                                <div class="card-body">
                                    <form action="" method="POST">
                                        <div class="form-group">
                                            <label for="titulo">Titulo: (*)</label>
                                            <input type="text" id="titulo" class="form-control" name="titulo"
                                                placeholder="Titulo para la publicacion" value="{{titulo}}" required
                                                autofocus>
                                        </div>
                                        <div class="form-group">
                                            <label for="breveDescrip">Descripcion: (*)</label>
                                            <textarea name="breveDescrip" id="breveDescrip" cols="30" rows="7"
                                                class="form-control" maxlength="1000"
                                                placeholder="Escriba aqui una breve introduccion a la publicaciÃ³n...">{{breveDescrip}}</textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="autor">Autor: (*)</label>
                                            <select class="custom-select form-control" id="autor">
                                                <option selected value="1">Seleccione un Autor...</option>
                                                {{#each autores}}
                                                <option value="{{nombre}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="form-group mt-2" id="massagePublicacionAutor">

                                        </div>
                                        <label for="categoria">Categoria: (*)</label>
                                        <div class="input-group">
                                            <select class="custom-select form-control" id="categoria"
                                                aria-label="Example select with button addon">
                                                <option default value="1">Seleccione una Categoria...</option>
                                                {{#each categorias}}
                                                <option value="{{categoria}}">{{categoria}}</option>
                                                {{/each}}
                                            </select>

                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalAgregarCateg">Agregar categoria</button>
                                            </div>

                                            <!-- Modal agregar categoria -->
                                            <div class="modal fade" id="modalAgregarCateg" tabindex="-1"
                                                aria-labelledby="modalAgregarCateg" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title font-weight-bold"
                                                                id="modalAgregarCateg">
                                                                Agregue la nueva categoria</h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <label for="categoriaModal">Categoria:</label>
                                                                <input type="text" id="categoriaModal"
                                                                    class="form-control" name="categoriaModal"
                                                                    placeholder="Escriba la nueva categoria...">
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn" id="cerrarModalCateg"
                                                                data-dismiss="modal">Cerrar</button>
                                                            <button type="button" class="btn btn-primary"
                                                                id="btnAddCategoria">Agregar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mt-2" id="massagePublicacionCateg">

                                        </div>

                                        <div class="form-group mt-3">
                                            <label for="editordata">Pagina de la publicacion: (*)</label>
                                            <textarea id="summernote" name="editordata"></textarea>
                                        </div>
                                        <div class="form-group mt-2" id="massagePublicacion">

                                        </div>
                                        <label>Campos obligatorios (*)</label>
                                        <button type="button" id="btn-guardarPublic"
                                            class="btn btn-primary btn-block">Guardar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- FIN CONTENT -->

                </div>
            </div>
        </div>

    </div> <!-- Fin del Sidebar Wrapper -->

</div>