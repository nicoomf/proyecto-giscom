<div class="bg-panel">
    <div class="d-flex">

        {{>sidebar}}

        <div class="admin-container w-100 container">
            <div class="head-admin-container m-3">
                <h1 class="title">Menu de Publicaciones</h1>
                <a href="/admin/publicaciones"><button class="btn btn-primary">Volver Atras</button></a>
            </div>

            <div id="content" class="d-block">
                <!-- FORMULARIO -->
                <div class="row">
                    <div class="col-lg mx-auto">
                        <div class="card">
                            <div class="card-header">
                                <h3>Editar Publicacion</h3>
                            </div>
                            <div class="card-body">
                                <form action="" method="POST">
                                    <div class="form-group">
                                        <label for="titulo">Titulo:</label>
                                        <input type="text" id="titulo" class="form-control" name="titulo"
                                            placeholder="Titulo para la publicacion" value="{{public.titulo}}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="autor">Autor:</label>
                                        <select class="custom-select form-control" id="autor">
                                            <option value="{{public.autor}}">{{public.autor}}</option>
                                            {{#each autores}}
                                            <option value="{{nombre}}">{{nombre}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <label for="categoria">Categoria:</label>
                                    <div class="input-group">
                                        <select class="custom-select form-control" id="categoria"
                                            aria-label="Example select with button addon">
                                            <option value="{{public.categoria}}">{{public.categoria}}</option>
                                            {{#each categorias}}
                                            <option value="{{categoria}}">{{categoria}}</option>
                                            {{/each}}
                                        </select>
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                data-target="#modalAgregarCateg">Agregar categoria</button>
                                        </div>

                                        <!-- Modal agregar categoria -->
                                        <div class="modal fade" id="modalAgregarCateg" tabindex="-1"
                                            aria-labelledby="modalAgregarCateg" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title font-weight-bold" id="modalAgregarCateg">
                                                            Agregue la nueva categoria</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label for="categoriaModal">Categoria:</label>
                                                            <input type="text" id="categoriaModal" class="form-control"
                                                                name="categoriaModal"
                                                                placeholder="Escriba la nueva categoria...">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn" id="cerrarModalCateg"
                                                            data-dismiss="modal">Cerrar</button>
                                                        <button type="button" class="btn btn-primary"
                                                            id="btnAddCategoria">Agregar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label for="editordata">Descripcion:</label>
                                        <textarea id="summernote" name="editordata" value=""></textarea>
                                    </div>
                                    <input type="hidden" id="descripcion" value="{{public.descripcion}}">
                                    <input type="hidden" id="id" value="{{public.id}}">
                                    <button type="button" id="btn-guardarEditPublic"
                                        class="btn btn-primary btn-block">Guardar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- FIN CONTENT -->

            </div>
        </div>

    </div>
</div>