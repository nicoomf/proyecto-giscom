<div class="bg-panel">
    <div class="d-flex">

        {{>sidebar}}

        <div class="admin-container w-100 container">
            <div class="head-admin-container m-3">
                <h1 class="title">Menu de Investigadores</h1>
                <a href="/admin/investigadores"><button class="btn btn-primary">Volver</button></a>
            </div>

            <div id="content" class="d-block">
                <!-- FORMULARIO -->
                <div class="row">
                    <div class="col-lg mx-auto">
                        <div class="card">
                            <div class="card-header">
                                <h3>Nuevo Investigador</h3>
                            </div>
                            <div class="card-body">

                                <form>

                                    <div class="row">
                                        <div class="col-lg-3 d-flex justify-content-center aling-items-center p-0">
                                            <button type="button" class="btn" data-toggle="modal" data-target="#modalFP"
                                                style="width: 150px; height: 150px; border-radius: 100%; padding: 0;">
                                                <img class="user-img" id="imgDefault" src="/uploads/user_default.png"
                                                    style="width: 100%; height: 100%; border-radius: 100%; object-fit: cover;">
                                                <img class="user-img d-none" id="imgUpload" src="" alt="" width="150px"
                                                    style="width: 100%; height: 100%; border-radius: 100%; object-fit: cover;">
                                                <input type="text" name="imgUrl" id="imgUrl" value="user_default.png"
                                                    class="d-none form-control">
                                            </button>
                                        </div>
                                        <div class="col-lg-9">
                                            <div class="form-group">
                                                <label for="nombre">Nombre: (*)</label>
                                                <input type="text" id="nombre" class="form-control" name="nombre"
                                                    placeholder="Nombre completo" value="{{nombre}}" required>
                                            </div>
                                            <div class="form-group my-0">
                                                <label for="departamento">Departamento: (*)</label>
                                                <input id="departamento" name="departamento" class="form-control"
                                                    placeholder="Departamento" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mt-2" id="massageTitulos">

                                    </div>
                                    <div class="form-group">
                                        <label for="titulos">Titulos: (*)</label>
                                        <div class="input-group">
                                            <input type="text" id="titulos" name="titulos"
                                                placeholder="Titulos, Doctorados, Magisters obtenidos..."
                                                class="form-control">
                                            <div class="input-group-append">
                                                <button type="button" id="agregarTitulo"
                                                    class="btn btn-primary">Agregar</button>
                                            </div>
                                        </div>
                                        <ul id="lista_titulos" class="list-group my-2">

                                        </ul>
                                    </div>
                                    <div class="form-group mt-2" id="massageAreas">

                                    </div>
                                    <div class="form-group">
                                        <label for="areas">Areas: (*)</label>
                                        <div class="input-group">
                                            <input type="text" id="areas" name="areas"
                                                placeholder="Areas en las que trabaja..." class="form-control">
                                            <div class="input-group-append">
                                                <button type="button" id="agregarArea"
                                                    class="btn btn-primary">Agregar</button>
                                            </div>
                                        </div>
                                        <ul id="lista_areas" class="list-group my-2">

                                        </ul>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email: (*)</label>
                                        <input type="email" id="email" class="form-control" name="email"
                                            placeholder="Correo Electronico" value="{{email}}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="numero">Numero:</label>
                                        <input type="text" id="numero" class="form-control" name="numero"
                                            placeholder="Numero telefonico" value="{{numero}}" required>
                                    </div>

                                    <div class="form-group mt-2" id="massageError">

                                    </div>

                                    <label for="email">Campos obligatorios (*)</label>
                                    <button type="button" class="btn btn-primary btn-block" id="btn-test">
                                        Registrar
                                    </button>
                                </form>

                                <!-- Modal -->
                                <div class="modal fade" id="modalFP" tabindex="-1" aria-labelledby="exampleModalLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title font-weight-bold" id="exampleModalLabel">
                                                    Fotografia de perfil:
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/admin/upload" method="POST" enctype="multipart/form-data"
                                                    id="formFP">
                                                    <div class="form-group">
                                                        <label for="archivo">Agregar fotografia:</label>
                                                        <input type="file" id="fotoPerfil" name="archivo"
                                                            class="custom-file"
                                                            accept="image/jpg, image/jpeg, image/png" required>
                                                    </div>
                                                    <div class="form-group mt-2" id="massageFotoPerfil">

                                                    </div>
                                                    <div class="form-group float-right">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal" id="cerrarFP">Close</button>
                                                        <button type="button" id="btnCargarImg"
                                                            class="btn btn-primary d-none">Guardar</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{!-- Fin Modal --}}

                        </div>
                    </div>
                </div>
            </div>
            <!-- FIN CONTENT -->

        </div>
    </div>

</div>
</div>