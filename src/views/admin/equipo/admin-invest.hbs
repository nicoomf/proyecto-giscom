<div class="bg-panel">

    <div class="d-flex" id="wrapper">

        {{!-- SIDEBAR --}}
        {{>sidebar}}

        {{!-- PAGE CONTENT --}}
        <div id="page-content-wrapper">
            <button class="btn btn-primary" id="sidebarToggle"><i class="fas fa-bars"></i></button>

            <div class="admin-container w-100 container">
                <div class="m-3">
                    <div class="row">
                        <div class="col d-flex justify-content-md-start justify-content-center">
                            <h1 class="title text-center text-md-left">Men√∫ de Investigadores</h1>
                        </div>
                        <div class="col d-flex justify-content-md-end justify-content-center align-items-center">
                            <a href="/admin/nuevo-invest"><button class="btn btn-primary">Agregar
                                    Investigador</button></a>
                        </div>
                    </div>
                </div>

                <div id="content" class="d-block">
                    <!-- Tabla -->
                    <div class="container w-100">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="bg-primary text-light">
                                    <tr class="text-center">
                                        <th class="text-left">Nombre</th>
                                        <th class="text-left">Correo</th>
                                        <th width="15%">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each invest}}
                                    <tr>
                                        <td>{{nombre}}</td>
                                        <td>{{email}}</td>
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <form action="/admin/edit-invest/{{_id}}" method="PUT">
                                                    <button type="submit" class="btn btn-primary btn-sm mr-2">
                                                        <i class="fas fa-pen lead"></i>
                                                    </button>
                                                </form>
                                                <form action="/admin/delete-invest/{{_id}}?_method=DELETE"
                                                    method="POST">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" class="btn btn-danger btn-sm mr-2">
                                                        <i class="fas fa-trash-alt lead"></i>
                                                    </button>
                                                </form>
                                                <a href="/equipo/investigadores/#invest{{_id}}" target="_blank"
                                                    class="btn btn-success btn-sm"><i class="fas fa-eye lead"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div> <!-- Fin del Sidebar Wrapper -->

</div>