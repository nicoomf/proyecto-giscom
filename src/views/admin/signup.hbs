<div class="bg-panel">
    <div class="d-flex" id="wrapper">

        {{!-- SIDEBAR --}}
        {{>sidebar}}

        {{!-- PAGE CONTENT --}}
        <div id="page-content-wrapper">
            <button class="btn btn-primary" id="sidebarToggle"><i class="fas fa-bars"></i></button>

            <div class="admin-container w-100 container">
                <div class="head-admin-container m-3">
                    <h1 class="title">Menu de Administradores</h1>
                    <a href="/admin/administradores"><button class="btn btn-primary">Volver</button></a>
                </div>

                <div class="pt-1">
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <div class="card">
                                <div class="card-header">
                                    <h3>Registrar Administrador</h3>
                                </div>
                                <div class="card-body">
                                    <form action="/admin/signup" method="POST">
                                        <div class="form-group">
                                            <label for="name">Nombre:</label>
                                            <input type="text" id="name" class="form-control" name="name"
                                                placeholder="Nombre Apellido" value="{{name}}">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email:</label>
                                            <input type="email" id="email" class="form-control" name="email"
                                                placeholder="Correo Electronico" value="{{email}}">
                                        </div>
                                        <div class="form-group">
                                            <label for="password">Contrase単a:</label>
                                            <input type="password" id="password" class="form-control" name="password"
                                                placeholder="Contrase単a">
                                        </div>
                                        <div class="form-group">
                                            <label for="confirm_password">Confirmar Contrase単a:</label>
                                            <input type="password" id="confirm_password" class="form-control"
                                                name="confirm_password" placeholder="Confirmar Contrase単a">
                                        </div>
                                        <button class="btn btn-primary btn-block">
                                            Registrar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>